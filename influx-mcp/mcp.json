{
  "name": "influx-mcp",
  "description": "MCP server for querying InfluxDB (v2/v1) with tools for IoT data.",
  "command": ["python", "-m", "influx_mcp.server"],
  "env": [
    "MCP_LOG_LEVEL",
    "INFLUX_VERSION",
    "INFLUX_URL",
    "INFLUX_ORG",
    "INFLUX_TOKEN",
    "INFLUX_DEFAULT_BUCKET",
    "INFLUX_USERNAME",
    "INFLUX_PASSWORD",
    "INFLUX_DEFAULT_DB",
    "INFLUX_DEFAULT_RP",
    "INFLUX_REQUEST_TIMEOUT_SEC"
  ]
}
